{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 9am on saturday"
  ],
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "description": "Group Helm chart updates (require manual review)",
      "matchManagers": [
        "helmv3"
      ],
      "groupName": "helm charts",
      "automerge": false
    },
    {
      "description": "Group Kubernetes and Helm Go modules",
      "matchManagers": [
        "gomod"
      ],
      "groupName": "kubernetes go modules",
      "matchPackageNames": [
        "/^k8s\\.io//",
        "/^helm\\.sh//",
        "/^sigs\\.k8s\\.io//"
      ]
    },
    {
      "description": "Group monitoring-related updates",
      "groupName": "monitoring",
      "matchPackageNames": [
        "/prometheus/",
        "/grafana/"
      ]
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github actions",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "description": "Group minor/patch Go module updates",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "description": "Group minor/patch Python dependency updates",
      "matchManagers": [
        "pip_requirements"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "description": "Group minor/patch pre-commit hook updates",
      "matchManagers": [
        "pre-commit"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
